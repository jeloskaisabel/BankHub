@model BankHubWeb.Models.CuentasBancaria

@{
    ViewData["Title"] = "Create Cuenta Bancaria Via API";
}

<h1>Create Cuenta Bancaria via API</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="CreateViaApi" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PersonaId" class="control-label"></label>
                <select asp-for="PersonaId" asp-items="ViewBag.PersonaId" class="form-control"></select>
                <span asp-validation-for="PersonaId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TipoCuenta" class="control-label"></label>
                <input asp-for="TipoCuenta" class="form-control" />
                <span asp-validation-for="TipoCuenta" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Saldo" class="control-label"></label>
                <input asp-for="Saldo" class="form-control" />
                <span asp-validation-for="Saldo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Moneda" class="control-label"></label>
                <input asp-for="Moneda" class="form-control" />
                <span asp-validation-for="Moneda" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create via API" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
